<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 https://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <!--    Use reference instead of service to test the rest api, since plugin installation fails otherwise-->
<!--    <service ref="clientProvider" interface="org.opennms.velocloud.client.api.VelocloudApiClientProvider"/>-->
    <reference id="clientProvider"  interface="org.opennms.velocloud.client.api.VelocloudApiClientProvider" availability="optional"/>
    <reference id="secureCredentialsVault"  interface="org.opennms.integration.api.v1.scv.SecureCredentialsVault" availability="optional"/>

    <!--    Requisition-->
    <bean id="partnerRequisitionProvider" class="org.opennms.velocloud.requisition.PartnerRequisitionProvider">
        <argument ref="clientProvider"/>
    </bean>
    <service ref="partnerRequisitionProvider" interface="org.opennms.integration.api.v1.requisition.RequisitionProvider"/>

    <bean id="customerRequisitionProvider" class="org.opennms.velocloud.requisition.CustomerRequisitionProvider">
        <argument ref="clientProvider"/>
    </bean>
    <service ref="customerRequisitionProvider" interface="org.opennms.integration.api.v1.requisition.RequisitionProvider"/>

    <!--    Rest-->
    <bean id="velocloudRestServiceV1" class="org.opennms.velocloud.rest.v1.VelocloudRestServiceV1Impl">
        <argument ref="clientProvider"/>
        <argument ref="secureCredentialsVault"/>
    </bean>
    <service interface="org.opennms.velocloud.rest.v1.VelocloudRestServiceV1" ref="velocloudRestServiceV1">
        <service-properties>
            <entry key="application-path" value="/rest/plugin"/>
        </service-properties>
    </service>
</blueprint>
